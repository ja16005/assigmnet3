<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:background="@drawable/iiit"
    tools:context="com.example.jahnavi.assignment3.MainActivity"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="1">
        <TextView

            android:gravity="left"
            android:textStyle="bold"
            android:textSize="25dp"
            android:fontFamily="cursive"
            android:textColor="#ffffff"
            android:text="Enter your details"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:fontFamily="cursive"
                android:textColor="#ffffff"
                android:text="Name             : "
                android:layout_weight="0.15"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textViewUser" />


            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="121dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:fontFamily="cursive"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:id="@+id/editTextName" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:fontFamily="cursive"
                android:textColor="#ffffff"
                android:text="Roll Number  : "
                android:layout_weight="0.15"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textViewPass" />


            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="121dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:fontFamily="cursive"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:id="@+id/editTextRoll" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:fontFamily="cursive"
                android:textColor="#ffffff"
                android:text="Current Sem  : "
                android:layout_weight="0.15"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textViewSem" />


            <EditText
                android:layout_width="114dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:fontFamily="cursive"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:id="@+id/editTextSem" />

        </LinearLayout>
        <TextView
            android:textStyle="bold"
            android:textSize="25dp"
            android:fontFamily="cursive"
            android:textColor="#ffffff"
            android:text="Save Into"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/ButtonSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="@drawable/color_button"
                android:layout_weight="1"
                android:text="Shared  Pref    ">
            </Button>
            <Button
                android:id="@+id/ButtonInternal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="@drawable/color_button"
                android:layout_weight="1"
                android:text="Internal Mem">
            </Button>

        </LinearLayout>
        <LinearLayout

            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/ButtonExternal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="@drawable/color_button"
                android:layout_weight="1" android:text="Ext Private">
            </Button>
            <Button
                android:id="@+id/ButtonExternalPublic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="@drawable/color_button"
                android:layout_weight="1"
                android:text="Ext Public">
            </Button>

            </LinearLayout>

            <LinearLayout

                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_alignParentBottom="true">
                <Button
                    android:id="@+id/ButtonSql"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:background="@drawable/color_button"
                    android:layout_weight="1" android:text="SQLite  ">
                </Button>
                <Button
                    android:id="@+id/ButtonNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:background="@drawable/color_button"
                    android:layout_weight="1"
                    android:text="Next">
                </Button>
            </LinearLayout>

    </LinearLayout>

</LinearLayout>
